config system global
    set admin-sport {ADMIN_PORT}
end
config system probe-response
    set mode http-probe
end
config system interface
    edit "port1"
        set vdom "root"
        set mode dhcp
        set type physical
        set allowaccess ping https ssh fgfm
    next
    edit "port2"
        set vdom "root"
        set defaultgw enable
        set mode dhcp
        set type physical
        set allowaccess ping https ssh fgfm
    next
        edit "port3"
        set vdom "root"
        set defaultgw enable
        set mode dhcp
        set type physical
        set allowaccess ping https ssh fgfm
    next
    edit "loopback"
        set vdom "root"
        set ip 192.168.199.1 255.255.255.255
        set allowaccess ping probe-response
        set type loopback
        set role lan
    next
end
config firewall vip
    edit "lb-probe"
        set extip "${fgt_secondary_ip}"
        set extintf "port1"
        set portforward enable
        set mappedip "192.168.199.1"
        set extport 8008
        set mappedport 8008
    next
        edit "to-internal-loadbalancer-port80"
        set extip "${fgt_secondary_ip}"
        set extintf "port1"
        set portforward enable
        set mappedip "${fgt_internalslb_ip}"
        set extport 80
        set mappedport 80
    next
        edit "to-internal-loadbalancer-port443"
        set extip "${fgt_secondary_ip}"
        set extintf "port1"
        set portforward enable
        set mappedip "${fgt_internalslb_ip}"
        set extport 443
        set mappedport 443
    next
end
config firewall service custom
    edit "ProbeService-8008"
        set comment "Default Probe Service for GCP on port 8008"
        set tcp-portrange 8008
    next
end
config firewall policy
    edit 2
        set name "DefaultGCPProbePolicy"
        set srcintf "port1"
        set dstintf "loopback"
        set srcaddr "all"
        set dstaddr "lb-probe"
        set action accept
        set schedule "always"
        set service "ProbeService-8008"
        set fsso disable
        set nat enable
        set comments "Default Policy to enable GCP loadbalancer probes on port 8008"
    next
    edit 3
        set name "toLoadBalancerPort80"
        set srcintf "port1"
        set dstintf "port2"
        set srcaddr "all"
        set dstaddr "to-internal-loadbalancer-port80"
        set action accept
        set schedule "always"
        set service "HTTP"
        set fixedport enable
        set nat enable
    next
    edit 4
        set name "toLoadBalancerPort443"
        set srcintf "port1"
        set dstintf "port2"
        set srcaddr "all"
        set dstaddr "to-internal-loadbalancer-port443"
        set action accept
        set schedule "always"
        set service "HTTP"
        set fixedport enable
        set nat enable
    next
end
config system auto-scale
    set status enable
    set sync-interface "{SYNC_INTERFACE}"
    set hb-interval {HEART_BEAT_INTERVAL}
    set role primary
    set callback-url {CALLBACK_URL}
    set psksecret {PSK_SECRET}
end
config router static
    edit 1
        set dst 172.16.8.0 255.255.255.0
        set gateway 172.16.8.1
        set device "port2"
    next
end
